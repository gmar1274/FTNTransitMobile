<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Order No."
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:textAlignment="viewEnd"
            android:layout_toLeftOf="@+id/tv_pickup_sku"
            android:layout_toStartOf="@+id/tv_pickup_sku"/>

        <TextView
            android:id="@+id/tv_order_number"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            android:layout_marginLeft="100dp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/tv_status"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/background_dark"
            android:layout_alignLeft="@+id/tv_pickup_date"
            android:layout_alignStart="@+id/tv_pickup_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/tv_pickup_date"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:text="Pickup Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold"
            android:layout_below="@+id/tv_status"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="Pickup SKU:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView11"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toStartOf="@+id/tv_status"
            android:layout_toLeftOf="@+id/tv_status"
            android:textAlignment="viewEnd"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignLeft="@+id/tv_pickup_date"
            android:layout_alignStart="@+id/tv_pickup_date"
            android:id="@+id/tv_pickup_sku"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView14"
            android:layout_alignLeft="@+id/tv_pickup_sku"
            android:layout_alignStart="@+id/tv_pickup_sku"
            android:id="@+id/tv_delivery_sku"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:text="Status:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:layout_below="@+id/textView14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tv_status"
            android:textAlignment="viewEnd"
            android:layout_alignRight="@+id/textView11"
            android:layout_alignEnd="@+id/textView11"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView16"
            android:layout_alignLeft="@+id/tv_pickup_date"
            android:layout_alignStart="@+id/tv_pickup_date"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:id="@+id/tv_pickup_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:text="Location:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView16"
            android:layout_alignRight="@+id/textView16"
            android:layout_alignEnd="@+id/textView16"
            android:layout_marginTop="13dp"
            android:id="@+id/textView18"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView18"
            android:layout_alignLeft="@+id/tv_pickup_time"
            android:layout_alignStart="@+id/tv_pickup_time"
            android:id="@+id/tv_pickup_location"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:text="Time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold"
            android:textAlignment="viewEnd"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/tv_pickup_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView8"
            android:layout_alignEnd="@+id/textView8"/>

        <TextView
            android:text="Delivery SKU:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="normal|bold"
            android:textAlignment="viewEnd"
            android:layout_below="@+id/textView11"
            android:layout_toLeftOf="@+id/tv_delivery_sku"
            android:layout_toStartOf="@+id/tv_delivery_sku"
            android:layout_marginTop="12dp"/>
    </RelativeLayout>

</LinearLayout>
